@*@model IEnumerable<ChinUpBoutique.Data.ApplicationUser>*@
@model IEnumerable<ChinUpBoutique.Models.UserRole>
@{
    ViewBag.Title = "Index";
}

<h2>Available Roles</h2>

@Html.ActionLink("Create Role", "Create", "Role")

<style type="text/css">
    #tbrole, .c {
        border: double;
    }
</style>

<table id="tbrole">
    <tr>
        <td class="c">
            Role Name
        </td>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="C">
                @item.UserName : @item.RoleNames.ToList()[0]
                @*@   @item.UserName
                    @item.Roles.ToList()[0].RoleId@*@
            </td>
            <td>
                @using (Html.BeginForm("Edit", "Role", new { userId = item.UserId}))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class = "control-label col-md-2">Select Role to Update</label>
                            @*@Html.LabelFor(model => model., htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-10">
                                @Html.DropDownList("RoleId", new SelectList(ViewBag.RoleNames, "Id", "Name"), null, new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.CustomerFirstName, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Change Role" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </td>
        </tr>
    }
</table>

